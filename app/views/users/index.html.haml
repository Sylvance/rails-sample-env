%h1 Listing users

%table
  %thead
    %tr
      %th ID
      %th Company
      %th Name
      %th API key
      %th API secret
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.id
        %td= user.company.name
        %td= user.name
        %td= user.api_key
        %td= user.api_secret
        %td= link_to 'OTP', otp_user_path(user)
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }

